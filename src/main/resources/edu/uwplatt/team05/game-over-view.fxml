<GridPane fx:controller="edu.uwplatt.team05.TetrisController"
          xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="15" vgap="15"
          styleClass="root">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Label fx:id="Menu" text="GAME OVER!" textFill="#636363" GridPane.columnIndex="1" GridPane.rowIndex="0"
           GridPane.columnSpan="2">
        <font>
            <Font name="Segoe UI Bold" size="30.0" />
        </font></Label>
    <Text id="score-text" text="your score was: "
          GridPane.columnIndex="1" GridPane.rowIndex="1"
          GridPane.columnSpan="2"/>
    <Label fx:id="gameOverScore" textFill="#636363" GridPane.columnIndex="3" GridPane.rowIndex="1"
           GridPane.columnSpan="2">
        <font>
            <Font name="Segoe UI Bold" size="20.0" />
        </font></Label>

    <Button fx:id="returnButton" onAction="#returnClick" text="Return" GridPane.columnIndex="1" GridPane.rowIndex="9"/>


</GridPane>